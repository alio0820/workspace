<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" 
	xmlns="http://java.sun.com/xml/ns/javaee" 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
	http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
	
	<context-param>
		<param-name>xname</param-name>
		<param-value>xxxxx</param-value>
	</context-param>
	
	
	
  <servlet>    
    <servlet-name>LoginServlet</servlet-name>
    <servlet-class>com.chinasoft.LoginServlet</servlet-class>
    <init-param>
    	<param-name>uname</param-name>
    	<param-value>zhouqi</param-value>    
    </init-param>
    
  </servlet>
  <servlet>   
    <servlet-name>LoginServlet1</servlet-name>
    <servlet-class>com.chinasoft.LoginServlet1</servlet-class>
    <load-on-startup>2</load-on-startup>
  </servlet>


  <servlet-mapping>
    <servlet-name>LoginServlet</servlet-name>
    <url-pattern>/servlet/LoginServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>LoginServlet1</servlet-name>
    <url-pattern>/servlet/LoginServlet1</url-pattern>
  </servlet-mapping>
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
</web-app>
